{
  "name": "parcel_lerna_yarn_react",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "serve": "cross-env NODE_ENV=production http-server ./build",
    "predev": "lerna run build --stream",
    "dev": "lerna run start --stream --parallel",
    "build:comp": "lerna run build --stream --scope",
    "start:comp": "lerna run start --stream --scope",
    "status": "lerna list --long",
    "clean": "rimraf node_modules",
    "reset": "lerna run clean --stream && lerna clean -y && lerna bootstrap",
    "bootstrap": "lerna bootstrap",
    "release": "lerna publish"
  },
  "devDependencies": {
    "lerna": "^3.5.0",
    "rimraf": "^2.6.2"
  }
}
